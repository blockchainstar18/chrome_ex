{
  "manifest_version": 3,
  "name": "Account Login Extension",
  "description": "Login automatically to Disneyplus, Netflix..",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "cookies",
    "storage",
    "browsingData",
    "webRequest",
    "declarativeNetRequest"
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.disneyplus.com/*",
        "*://*.hbomax.com/*",
        "*://*.netflix.com/*",
        "*://*.crunchyroll.com/*",
        "*://*.dazn.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": [
        "background.bundle.js",
        "contentScript.bundle.js",
        "content.styles.css",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}